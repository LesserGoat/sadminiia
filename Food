//Perishable Items
package sample;
import java.time.LocalDate;
import java.time.format.DateTimeFormatter;
import java.time.LocalDateTime;
import java.util.Date;
import java.text.SimpleDateFormat;

public class Food {
    private String name;
    private int exitTime;
    private int returnTime;
    private int totalTime;


    public Food (String fName, int eT, int rT, int tT)
    {
        name = fName;
        exitTime = eT;
        returnTime = rT;
        totalTime = tT;

    }

    public String getName()
    {
        return name;
    }

    public void setName(String nam)
    {
        name = nam;
    }
    
    public String getExit()
    {
        return exitTime;
    }

    public void setExit(int eT)
    {
        exitTime = eT;
    }
    
    public String getReturn()
    {
        return returnTime;
    }

    public void setReturn(int rT)
    {
        returnTime = rT;
    }
    
    public String getTotal()
    {
        totalTime = exitTime - returnTime;
        return totalTime;
    }




    public String writeFood()
    {
        return name + "\n" + exitTime + "\n" + amount + "\n" + returnTime + "\n" + totalTime;
    }

    public String toString()
    {
        return name + ", Type: " + foodType + ", Count:" + amount + ", Expires:" + expirationMonth + "/" + expirationDate + "/" + expirationYear +
                ", Purchased:" + purchaseMonth + "/" + purchaseDate + "/" + purchaseYear;
    }

}
